{
  "name": "mcp-portal-transparencia",
  "version": "1.0.0",
  "description": "Multi-step Call Planner (MCP) for Brazilian Government Transparency Portal API. Provides intelligent query planning, data aggregation, and comprehensive API interaction capabilities for the Portal da TransparÃªncia, enabling efficient access to public expenditure data, government contracts, and transparency information.",
  "main": "src/index.ts",
  "bin": "src/index.ts",
  "type": "commonjs",
  "scripts": {
    "dev": "npx ts-node -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "clean": "rm -rf dist coverage temp_build",
    "prepare": "husky install"
  },
  "keywords": [
    "mcp",
    "portal-transparencia",
    "government-api",
    "transparency",
    "brazil",
    "openapi",
    "swagger",
    "api-client"
  ],
  "author": "Lucas Dutra",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "axios": "^1.10.0",
    "openapi-types": "^12.1.3",
    "winston": "^3.17.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@/clients/(.*)$": "<rootDir>/src/clients/$1",
      "^@/core/(.*)$": "<rootDir>/src/core/$1",
      "^@/utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@/types/(.*)$": "<rootDir>/src/types/$1",
      "^@/config/(.*)$": "<rootDir>/src/config/$1",
      "^@/errors/(.*)$": "<rootDir>/src/errors/$1",
      "^@/logging/(.*)$": "<rootDir>/src/logging/$1"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
