{
  "name": "mcp-portal-transparencia",
  "version": "1.0.0",
  "description": "Multi-step Call Planner (MCP) for Brazilian Government Transparency Portal API. Provides intelligent query planning, data aggregation, and comprehensive API interaction capabilities for the Portal da TransparÃªncia, enabling efficient access to public expenditure data, government contracts, and transparency information.",
  "main": "dist/mcp-server.js",
  "bin": {
    "mcp-portal-transparencia": "./bin/mcp-portal-transparencia.js"
  },
  "type": "commonjs",
  "scripts": {
    "dev": "npx ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start": "node dist/mcp-server.js",
    "mcp-server": "node ./bin/mcp-portal-transparencia.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "clean": "rm -rf dist coverage temp_build",
    "prepare": "husky install"
  },
  "keywords": [
    "mcp",
    "portal-transparencia",
    "government-api",
    "transparency",
    "brazil",
    "openapi",
    "swagger",
    "api-client"
  ],
  "author": "Lucas Dutra",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasdutra/mcp-portal-transparencia.git"
  },
  "bugs": {
    "url": "https://github.com/lucasdutra/mcp-portal-transparencia/issues"
  },
  "homepage": "https://github.com/lucasdutra/mcp-portal-transparencia#readme",
  "files": [
    "dist/",
    "bin/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@modelcontextprotocol/sdk": "^1.15.0",
    "axios": "^1.10.0",
    "dotenv": "^16.4.7",
    "handlebars": "^4.7.8",
    "openapi-types": "^12.1.3",
    "openapi-typescript": "^7.4.2",
    "openapi-typescript-codegen": "^0.29.0",
    "swagger-parser": "^10.0.3",
    "task-master-ai": "^0.19.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts",
      "!src/tests/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@/clients/(.*)$": "<rootDir>/src/clients/$1",
      "^@/core/(.*)$": "<rootDir>/src/core/$1",
      "^@/utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@/types/(.*)$": "<rootDir>/src/types/$1",
      "^@/config/(.*)$": "<rootDir>/src/config/$1",
      "^@/logging/(.*)$": "<rootDir>/src/logging/$1",
      "^@/errors/(.*)$": "<rootDir>/src/errors/$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.test.json"
        }
      ]
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
